{
  "manifest_version": 2,
  "name": "SVG Wizard",
  "version": "1.1.0",
  "description": "Copy or download SVG images in a single click!",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "author": "Starlight System",
  "web_accessible_resources": [
    "*.js",
    "*.json",
    "*.css",
    "*.svg",
    ".png"
  ],
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "menus",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
    },
    "default_popup": "action/menu.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "svgWizard@starlight",
      "strict_min_version": "63.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  }
}